<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grats">
    <Color x:Key="BackgroundDarkColor">#2c3e4f</Color>
    <Color x:Key="BackgroundLightColor">#ecf0f1</Color>
    <Color x:Key="PrimaryColor">#8A7BAF</Color>
    <Color x:Key="SecondaryColor">#442F74</Color>
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="Background"
                             Color="{StaticResource BackgroundDarkColor}"/>
            <SolidColorBrush x:Key="HeaderBackground"
                             Color="#e54d42"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="Background"
                             Color="{StaticResource BackgroundLightColor}"/>
            <SolidColorBrush x:Key="HeaderBackground"
                             Color="#3a99d9"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>